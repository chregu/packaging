POSTINST=@POSTINST@
PREINST=@PREINST@
POSTRM=@POSTRM@
PRERM=@PRERM@
TMP=@TMPDIR@
PTMP=$(TMP)/$(PACKAGENAME)

clean:
	rm -rf $(PTMP)

structure: clean
	mkdir -p $(PTMP)/src $(PTMP)/build $(PTMP)/misc
	rsync -r --exclude packaging --exclude Makefile \
		--exclude packaging_config.php --exclude '.git*' --exclude '.svn' \
		--exclude '.CVS' $(EXCLUDE) . $(PTMP)/src
	@INSTALLCMD@

package: structure
	fpm -s dir -t deb -n "$(PACKAGENAME)" -v "$(VERSION)" -m "$(MAINTAINER)" --url "$(URL)" \
		$(DEPENDS) $(POSTINST) $(PREINST) $(POSTRM) $(PRERM) \
		-a all -C $(PTMP)/build

