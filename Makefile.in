EXTRA_EXCLUDE=-x packaging -x packaging_config.php -x ".git*" -x Makefile
TMP=tmp
PTMP=$(TMP)/$(PACKAGENAME)

clean:
	rm -rf $(TMP)

structure: clean
	mkdir -p $(PTMP)/src $(PTMP)/build $(PTMP)/misc
